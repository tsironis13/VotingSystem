<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_row_height"
    android:orientation="horizontal"
    android:background="@drawable/ripple_drawable"
    android:clickable="true">

    <ImageView
        android:id="@+id/navDrawerImv"
        android:layout_width="@dimen/nav_drawer_RcV_images_dimens"
        android:layout_height="@dimen/nav_drawer_RcV_images_dimens"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/navDrawerTtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_drawer_RcV_category_marginLeft"
        android:textSize="@dimen/nav_drawer_subtitle_textsize"
        android:textColor="@drawable/navdrawer_textview_state"
        android:layout_gravity="center_vertical" />

</LinearLayout>