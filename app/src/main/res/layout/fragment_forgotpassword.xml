<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/container_width"
        android:layout_height="@dimen/container_height"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/logo_dimens"
            android:layout_height="@dimen/logo_dimens"
            android:layout_marginTop="@dimen/forgot_pass_logo_marginTop"
            android:layout_marginBottom="@dimen/forgot_pass_logo_marginBottom"
            android:background="@drawable/app_logo"
            android:contentDescription="@string/app_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_container_height"
            android:background="@drawable/login_fields_container"
            android:layout_marginBottom="@dimen/logo_dimens_andBottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/logo_dimens_andBottom"
                android:layout_height="@dimen/logo_dimens_andBottom"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/input_logo_marginLeftRight"
                android:layout_marginRight="@dimen/input_logo_marginLeftRight"
                android:background="@drawable/email_icon" />

            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="@dimen/common_width"
                android:layout_height="match_parent"
                android:textSize="@dimen/input_edt_textSize"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:hint="@string/email" />

        </LinearLayout>

        <Button
            android:id="@+id/sendEmailBtn"
            android:layout_width="@dimen/action_btn_width"
            android:layout_height="@dimen/action_btn_height"
            android:layout_marginBottom="@dimen/marginBottom"
            android:textColor="@android:color/white"
            android:background="@color/actionBtnColor"
            android:text="@string/sendEmail" />

        <TextView
            android:id="@+id/signInHereTtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/common_width"
        android:layout_height="@dimen/view_height"
        android:layout_marginBottom="@dimen/marginBottom"
        android:background="@color/viewBackgroundColor" />

    <TextView
        android:id="@+id/registerTtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />

</LinearLayout>