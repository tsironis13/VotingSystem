<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/container_width"
            android:layout_height="@dimen/container_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/forgot_pass_container_marginTop"
            android:layout_marginBottom="@dimen/forgot_pass_container_marginBottom">

            <ImageView
                android:layout_width="@dimen/logo_dimens"
                android:layout_height="@dimen/logo_dimens"
                android:background="@drawable/app_logo"
                android:contentDescription="@string/app_logo" />

            <com.rey.material.widget.LinearLayout
                android:layout_width="@dimen/container_width"
                android:layout_height="@dimen/input_container_height"
                android:background="@drawable/login_fields_container"
                android:layout_marginTop="@dimen/forgotpassword_inputfields_container_marginTop"
                android:layout_marginBottom="@dimen/forgotpassword_inputfields_container_marginBottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/input_field_logo_dimens"
                    android:layout_height="@dimen/input_field_logo_dimens"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/input_logo_marginLeftRight"
                    android:layout_marginRight="@dimen/input_logo_marginLeftRight"
                    android:background="@drawable/email_icon"
                    android:contentDescription="@string/input_logo" />

                <com.rey.material.widget.EditText
                    android:id="@+id/emailEdt"
                    android:layout_width="@dimen/input_field_Edt_width"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/input_field_Edt_paddingRight"
                    android:textSize="@dimen/input_edt_textSize"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/input_hintColor"
                    android:background="@android:color/transparent"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    style="@style/EditextEmail"
                    app:et_inputId="@+id/wrapped_emailEdt" />

            </com.rey.material.widget.LinearLayout>

            <com.rey.material.widget.ProgressView
                android:id="@+id/progressView"
                android:layout_width="@dimen/progressView_dimens"
                android:layout_height="@dimen/progressView_dimens"
                style="@style/InCircularProgressView" />

            <Button
                android:id="@+id/sendEmailBtn"
                android:layout_width="@dimen/action_btn_width"
                android:layout_height="@dimen/action_btn_height"
                android:layout_marginTop="@dimen/loginActivity_Btn_marginTop"
                android:layout_marginBottom="@dimen/loginActivity_Btn_marginBottom"
                android:textColor="@android:color/white"
                android:text="@string/sendEmail"
                android:background="@drawable/ripple_drawable" />

            <com.rey.material.widget.TextView
                android:id="@+id/signInHereTtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/signInHere_Ttv_paddingTopBottom"
                android:paddingBottom="@dimen/signInHere_Ttv_paddingTopBottom"
                android:paddingLeft="@dimen/signInHere_Ttv_paddingLeftRight"
                android:paddingRight="@dimen/signInHere_Ttv_paddingLeftRight"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:textColor="@android:color/white"
                style="@style/SignInHere_Register_ForgotPassword_Ttv" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/common_width"
            android:layout_height="@dimen/view_height"
            android:layout_marginTop="@dimen/view_marginTop"
            android:layout_marginBottom="@dimen/view_marginBottom"
            android:background="@color/viewBackgroundColor" />

        <com.rey.material.widget.TextView
            android:id="@+id/registerTtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/forgotpassword_register_Ttv_paddingTopBottom"
            android:paddingLeft="@dimen/forgotpassword_register_Ttv_paddingLeftRight"
            android:paddingRight="@dimen/forgotpassword_register_Ttv_paddingLeftRight"
            android:paddingBottom="@dimen/forgotpassword_register_Ttv_paddingTopBottom"
            style="@style/SignInHere_Register_ForgotPassword_Ttv" />

    </LinearLayout>

</ScrollView>