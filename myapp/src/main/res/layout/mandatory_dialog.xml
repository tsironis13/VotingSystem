<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mand_dialog_container_height"
    android:orientation="vertical"
    android:layout_margin="@dimen/mand_dialog_container_margin">

    <com.rey.material.widget.TextView
        android:id="@+id/mandatoryDialogTtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mand_dialog_title_margin_bottom"
        android:text="@string/mandatory_dialog_title"
        android:textColor="@color/note_text_color"
        android:textSize="@dimen/mand_dialog_title_text_size"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/confirmMandatoryDialogBtn"
        android:layout_width="@dimen/mand_dialog_btn_width"
        android:layout_height="@dimen/mand_dialog_btn_height"
        android:layout_gravity="end"
        android:text="@string/confirm_btn_text"
        android:textColor="@android:color/white"
        android:background="@drawable/ripple_drawable" />

</LinearLayout>