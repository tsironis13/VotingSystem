<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>
    <!-- LOGIN -->
    <style name="SignInHere_Register_ForgotPassword_Ttv" parent="Material.Drawable.Ripple">
        <item name="rd_rippleColor">@color/primaryColor</item>
        <item name="rd_rippleAnimDuration">200</item>
    </style>
    <!-- SIGN IN -->
    <style name="EditextSignInPassword" parent="Editext">
        <item name="et_supportMode">helper</item>
    </style>
    <!-- REGISTER -->
    <style name="Editext" parent="Material.Widget.EditText.Light">
        <item name="et_supportTextErrorColor">@color/et_supportTextErrorColor</item>
        <item name="et_supportTextSize">@dimen/et_supportTextSize</item>
        <item name="et_labelEnable">true</item>
        <item name="et_labelTextColor">@color/accentColor</item>
        <item name="et_labelTextSize">@dimen/et_labelTextSize</item>
        <item name="et_supportSingleLine">true</item>
        <item name="et_dividerColor">@android:color/transparent</item>
    </style>
    <style name="EditextUsername" parent="Editext">
        <item name="et_supportMode">helper</item>
    </style>
    <style name="EditextPassword" parent="Editext">
        <item name="et_dividerHeight">@dimen/et_dividerHeight</item>
        <item name="et_dividerErrorColor">@color/divider_errorColor</item>
        <item name="et_supportMode">charCounter</item>
        <item name="et_supportMaxChars">8</item>
        <item name="et_supportTextColor">@color/accentColor</item>
    </style>
    <style name="EditextConfirmPassword" parent="Editext">
        <item name="et_supportMode">helper</item>
    </style>
    <style name="EditextEmail" parent="Editext">
        <item name="et_supportMode">helper</item>
    </style>
    <style name="EditextFirmCode" parent="Editext">
        <item name="et_supportMode">helper</item>
    </style>
    <!-- SPINNER -->
    <style name="Spinner" parent="Material.Drawable.Ripple">
        <item name="spn_dividerColor">@android:color/transparent</item>
        <item name="spn_arrowPadding">@dimen/spn_arrowPadding</item>
        <item name="spn_arrowColor">@color/accentColor</item>
        <item name="spn_arrowSize">@dimen/spn_arrowSize</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">120</item>
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
    </style>
    <style name="SpinnerItem" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/primaryColor</item>
        <item name="rd_rippleAnimDuration">380</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">@dimen/rd_cornerRadius</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>
    <!-- PROGRESS VIEWS -->
    <style name="CircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/accentColor</item>
    </style>

    <style name="CircularProgressView">
        <item name="pv_autostart">false</item>
        <item name="pv_circular">true</item>
        <item name="pv_progressStyle">@style/CircularProgressDrawable</item>
        <item name="pv_progressMode">indeterminate</item>
    </style>

    <style name="InCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/actionBtnColor</item>
        <item name="cpd_inAnimDuration">600</item>
        <item name="cpd_inStepPercent">0.4</item>
        <item name="cpd_inStepColors">@array/in_circular_progress_colors</item>
        <item name="cpd_outAnimDuration">600</item>
    </style>

    <style name="InCircularProgressView" parent="CircularProgressView">
        <item name="pv_progressStyle">@style/InCircularProgressDrawable</item>
    </style>

    <!-- SNACKBARS -->
    <style name="SnackBarNoConnection" parent="Material.Widget.SnackBar.Mobile">
        <item name="android:layout_gravity">top</item>
        <item name="sb_horizontalPadding">@dimen/sb_horizontalPadding</item>
        <item name="sb_actionText">@string/more</item>
        <item name="sb_textSize">@dimen/no_connection_sb_textSize</item>
        <item name="sb_duration">5000</item>
    </style>
    <style name="SnackBarUnavailableService" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_horizontalPadding">@dimen/unavailable_service_internal_error_sb_horizontalPadding</item>
        <item name="sb_textSize">@dimen/unavailable_service_sb_textSize</item>
        <item name="sb_duration">2000</item>
    </style>
    <style name="SnackBarInternalError" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_horizontalPadding">@dimen/unavailable_service_internal_error_sb_horizontalPadding</item>
        <item name="sb_textSize">@dimen/internal_error_sb_textSize</item>
        <item name="sb_duration">2000</item>
    </style>
    <!-- DIALOS -->
    <style name="ConnectionSettingsBottomSheetDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bsd_inDuration">@android:integer/config_mediumAnimTime</item>
        <item name="bsd_inInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="bsd_outDuration">@android:integer/config_mediumAnimTime</item>
        <item name="bsd_outInterpolator">@android:anim/accelerate_interpolator</item>
        <item name="bsd_cancelable">true</item>
        <item name="bsd_canceledOnTouchOutside">true</item>
        <item name="bsd_dimAmount">0.5</item>
    </style>
    <style name="ConnectionSettingsBottomSheetDialogLlt" parent="Material.Drawable.Ripple.Wave">
        <item name="android:background">@android:color/white</item>
        <item name="rd_rippleColor">@color/connection_settings_rippleColor</item>
        <item name="rd_rippleAnimDuration">400</item>
    </style>
</resources>
